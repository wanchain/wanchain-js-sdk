{
    "version" : "0.0.1",
    "network" : {
        "timeout" : 180000,
        "retries" : 3,
        "circuitBreaker" : {
            "timeLimit" : 30000,
            "timeThrottle" : 5,
            "timeoutThrottle": 3,
            "freezeTime" : 60000
        }
    },
    "logging" : {
        "transport" : "console",
        "level" : "info"
    },
    "wallets" : {
        "mnemonic" : {
            "bip39Strength" : 128
        },
        "healthcheck" : {
            "timeout"  : 5000,
            "bootstrap": 10000,
            "interval" : 2000,
            "threshold": 3 
        },
        "chainMap" : {
            "ETH" : {
                "name"  : "ETH",
                "class" : "ETH"
            },
            "WAN" : {
                "name"  : "WAN",
                "class" : "WAN"
            },
            "BTC" : {
                "name"  : "BTC",
                "class" : "BTC"
            }
        }
    },
    "privateTX" : {
        "enabled" : true,
        "ringSize": 8,
        "scan" : {
            "batch": {
                "max" : 200000,
                "min" : 5000,
                "size": 50000
            },
            "boundary" : 5,
            "bootstrap": 10000,
            "interval" : 10000,
            "algo" : {
                "preFetch" : true,
                "fetchInterval" : 8000,
                "fetchAPI" : "getTransByAddressBetweenBlocks",
                "batchAdjust" : {
                    "increase" : 500,
                    "decrease" : 7000
                }
            }
        }
    }
}

